bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# Lock screen
bindsym $mod+Control+l exec i3lock

# Clients
set $START_TERMINAL "konsole -e tmux"
set $START_IDE "/opt/idea-IU-233.13135.103/bin/idea.sh > /dev/null 2>&1 &"
set $START_BROWSER "firefox -P dowoc-profile"
set $START_SECOND_BROWSER firefox
set $START_PASSWORD_MANAGER keepassxc
set $START_MAIL_CLIENT "thunderbird > /dev/null 2>&1 &"
set $START_MUSIC_PLAYER "psst-gui > /dev/null 2>&1 &"
set $START_NOTES_APP subl

set $TERMINAL_CLASS_MATCHER "konsole"
set $IDE_CLASS_MATCHER "jetbrains-idea"
set $BROWSER_CLASS_MATCHER "Brave-browser"
set $SECOND_BROWSER_CLASS_MATCHER firefox
set $PASSWORD_MANAGER_INSTANCE_MATCHER keepassxc
set $MAIL_CLIENT_CLASS_MATCHER thunderbird
set $MUSIC_PLAYER_CLASS_MATCHER Psst-gui
set $NOTES_APP_CLASS_MATCHER Subl

# Config vars
set $SCRATCHPAD_X_POS 820
set $SCRATCHPAD_Y_POS 270
set $SCRATCHPAD_WIDTH 1800
set $SCRATCHPAD_HEIGHT 900

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        position top
        status_command i3status
}

# Terminal in scratchpad
exec --no-startup-id $START_TERMINAL
for_window [class=$TERMINAL_CLASS_MATCHER] move scratchpad, move position $SCRATCHPAD_X_POS $SCRATCHPAD_Y_POS, resize set $SCRATCHPAD_WIDTH $SCRATCHPAD_HEIGHT;
bindsym F11 [class=$TERMINAL_CLASS_MATCHER] scratchpad show;

# Notes app in scratchpad
exec --no-startup-id $START_NOTES_APP
for_window [class="$NOTES_APP_CLASS_MATCHER"] move scratchpad, move position $SCRATCHPAD_X_POS $SCRATCHPAD_Y_POS, resize set $SCRATCHPAD_WIDTH $SCRATCHPAD_HEIGHT;
bindsym $mod+F11 [class="$NOTES_APP_CLASS_MATCHER"] scratchpad show;

# Password manager in scratchpad
exec --no-startup-id $START_PASSWORD_MANAGER
for_window [instance="$PASSWORD_MANAGER_INSTANCE_MATCHER"] move scratchpad, move position $SCRATCHPAD_X_POS $SCRATCHPAD_Y_POS, resize set $SCRATCHPAD_WIDTH $SCRATCHPAD_HEIGHT;
bindsym F10 [instance="$PASSWORD_MANAGER_INSTANCE_MATCHER"] scratchpad show;

# Music player in scratchpad
exec --no-startup-id $START_MUSIC_PLAYER
for_window [class="$MUSIC_PLAYER_CLASS_MATCHER"] move scratchpad, move position $SCRATCHPAD_X_POS $SCRATCHPAD_Y_POS, resize set $SCRATCHPAD_WIDTH $SCRATCHPAD_HEIGHT;
bindsym $mod+F10 [class="$MUSIC_PLAYER_CLASS_MATCHER"] scratchpad show;

# Setup workspace 1 - work (IDE + browser)
exec $START_IDE
assign [class=$IDE_CLASS_MATCHER] 1
exec $START_BROWSER
assign [class=$BROWSER_CLASS_MATCHER] 1

# Setup workspace 2 - communication (mail)
exec $START_MAIL_CLIENT
assign [class=$MAIL_CLIENT_CLASS_MATCHER] 2
